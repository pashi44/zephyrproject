menu "Custom driver instances"

	config LED_CUSTOM
	    bool "Enable custom GPIO LED driver"
	    default n
	    help
	      Enable support for a custom GPIO-based LED driver with multiple instances.

	if LED_CUSTOM

	config LED_CUSTOM_NUM_INSTANCES
	    int "Number of LED instances"
	    default 2
	    help
	      Sets the number of custom LED driver instances to configure.

	endif # LED_CUSTOM

endmenu
